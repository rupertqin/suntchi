<%- include head %>
<form class="ui form" @submit.prevent="save">
    <div class="ui middle grid">
         <div class=" twelve wide column">
            <div class="content">
                <h2>导航管理</h2>
                <table class="ui celled table">
                    <thead>
                        <tr><th>name</th>
                            <th>url</th>
                            <th>action </th>
                    </tr></thead>
                    <tbody>
                        <tr v-for="nav in navs">
                            <td><input type="text" v-model="nav.name"></td>
                            <td><input type="text" v-model="nav.url"></td>
                            <td>
                                <div class="ui right floated small red labeled icon button" @click="delItem($index)">
                                    <i class="remove icon"></i> Del
                                </div>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3">
                                <div class="ui right floated small primary labeled icon button" @click="addItem">
                                    <i class="plus icon"></i> Add
                                </div>
                            </th>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
        <div class="four wide column">
            <div class="content">
                <button class="ui button primary" type="submit">发布</button>
            </div>
        </div>
    </div>
</form>

<script src="/static/dist/navigator.bundle.js"></script>
<%- include foot %>
