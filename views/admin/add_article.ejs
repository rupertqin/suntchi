<%- include head %>
<form class="ui form" @submit.prevent='save'>
    <div class="ui middle grid">
         <div class=" twelve wide column">
            <div class="content">
                <h2>添加文章</h2>
                <div class="field">
                    <input type="text" v-model='title' name="first-name" placeholder="标题">
                </div>
                <div class="field">
                    <label>内容</label>
                    <textarea id="editor" v-model='content'></textarea>
                </div>
            </div>
        </div>
        <div class="four wide column">
            <div class="content">
                <button class="ui button primary" type="submit">发布文章</button>
				<% if (typeof fe !== 'undefined' && fe.id){ %>
					<% 
						var funStr = `if (window.confirm('do you want to delete this post?')){
							window.location.href='/admin/article/${fe.id}/del'
						}`
					%>
					<a onclick="<%- funStr %>" class="ui button primary">删除</a>
				<% } %>
                <div class="field">
                    <label>分类</label>
                    <div class="grouped fields">
                        <div class="field" v-for='i in ["about", "people", "work"]'>
                            <div class="ui radio checkbox">
                                <input type="radio" name="category" value="{{i}}" v-model='category' class="hidden">
                                <label>{{i}}</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src='/static/dist/admin.bundle.js'></script>
<%- include foot %>