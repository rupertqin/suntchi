<%- include head %>
<form class="ui form" @submit.prevent="save">
    <div class="ui middle grid">
         <div class=" twelve wide column">
            <div class="content">
                <h2>导航管理</h2>
                <table class="ui celled table">
                    <thead>
                        <tr>
                            <th>title</th>
                            <th>category</th>
                            <th>update_at</th>
                            <th>action </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (article of articles){ %>
                        <tr>
                            <td><a href=<%= `/admin/article/${article._id}` %>><%= article.title %></a></td>
                            <td><%= article.category %></td>
                            <td><%= article.update_at %></td>
                            <td>
                                <div class="ui right floated small red labeled icon button" @click="delItem($index)">
                                    <i class="remove icon"></i> Del
                                </div>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3">
                                <div class="ui right floated small primary labeled icon button" @click="addItem">
                                    <i class="plus icon"></i> Add
                                </div>
                            </th>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
        <div class="four wide column">
            <div class="content">
                <button class="ui button primary" type="submit">发布</button>
            </div>
        </div>
    </div>
</form>

<script src='/static/dist/admin.bundle.js'></script>
<%- include foot %>